<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Adresses" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Adresses</h1>
    <%= link_to "New adress", new_adress_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="adresses" class="min-w-full border-2	rounded p-4 my-2 grid grid-rows-3 grid-flow-col gap-4">
    <% @adresses.each do |adress| %>
      <div>
        <%= render adress %>
        <p>
          <%= link_to "Show this adress", adress, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 hover:bg-gray-200 inline-block font-medium" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
